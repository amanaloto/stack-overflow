%span#answer_row
  .row
    .panel.panel-default
      .panel-body
        .col-md-2
          %span.label.label-default
            %span.points
              = total_points answer.id, "Answer"
            - if current_user
              = link_to '+', 
                votes_up_path(:type => "Answer", 
                              :id => answer.id), 
                :remote => true, 
                :class => "up_vote"

              = link_to '-', 
                votes_down_path(:type => "Answer", 
                                :id => answer.id), 
                :remote => true, 
                :class => "down_vote"

        .col-md-10
          = (parse_tags answer.answer).html_safe

          - if current_user
            .btn-group.btn-group-xs.pull-right
              = link_to 'Reply', 
                new_question_answer_comment_path(answer.question, 
                                                  answer), 
                :class => "btn btn-sm btn-default reply", 
                :remote => true
                
              - if current_user.id == answer.user_id
                = link_to "Delete Answer", 
                  question_answer_path(answer.question, 
                                        answer), 
                  :confirm => "Are you sure?", 
                  :method => :delete, 
                  :class => "btn btn-sm btn-danger delete_answer", 
                  :remote => true

  %p.text-right
    %small
      Answered by:
      %strong
        = link_to answer.name, User.find(answer.user_id)
      on 
      = answer.created_at

  .row
    .col-md-10.col-md-offset-2.comment-form
  .row
    .col-md-10.col-md-offset-2
      - if answer.comments.present?
        %strong Replies:
        %ul.list-group
          = render answer.comments.first(5)
          - if answer.comments.count > 5
            %li.list-group-item
              .row
                .col-md-3.col-md-offset-5
                  = link_to '&bull; &bull; &bull;'.html_safe, 
                    answer_comments_path(answer), 
                    :remote => true, 
                    :id => 'expand_comments'
