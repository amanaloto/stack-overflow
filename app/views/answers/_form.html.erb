<%= form_for [@question, @question.answer.build] do |f| %>
	<div class="field">
	   <%= f.hidden_field :name, :value => current_user.email %>
	</div>
	<div class="field">
	   <%= f.hidden_field :user_id, :value => current_user.id %>
	</div>
	<div class="field">
		<%= f.label "Answer" %><br />
		<%= f.text_area :answer %><br />
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>