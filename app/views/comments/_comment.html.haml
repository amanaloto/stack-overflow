%tr
  %td.col-md-1
    %span.points
      = total_points comment.id, "Comment"
    - if !current_user.nil?
      = link_to '+', votes_up_path(:type => "Comment", :id => comment.id, :question_id => @question.id), :remote => true, :class => "up_vote"
      = link_to '-', votes_down_path(:type => "Comment", :id => comment.id, :question_id => @question.id), :remote => true, :class => "down_vote"
  %td
    %small
      "#{comment.comment}"
      %strong -#{comment.name}

      - if !current_user.nil? && current_user.id == comment.user_id
        = link_to "Delete", [comment.answer, comment], :confirm => "Are you sure?", :method => :delete