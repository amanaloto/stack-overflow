= form_for [@answer, @answer.comments.build], :remote => true do |f|
	.field
		= f.hidden_field :name, :value => current_user.email
	.field
		= f.hidden_field :user_id, :value => current_user.id
	.field
		= f.label "Post a reply:"
		%br
		= f.text_area :comment, {:rows => "4", :cols => "60"}
		%br
	.actions
		= f.submit "Send!"