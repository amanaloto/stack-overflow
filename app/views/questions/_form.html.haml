= form_for @question do |f|
  - if @question.errors.any?
    #error_explanation
      %h2
        = pluralize(@question.errors.count, "error")
        prohibited this question from being saved:

      %ul
      - @question.errors.full_messages.each do |msg|
        %li= msg

  .field
    = f.hidden_field :name, :value => current_user.email
  .field
    = f.hidden_field :user_id, :value => current_user.id
  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :question
    %br
    = f.cktext_area :question, :ckeditor => {:toolbar => 'CustomToolbar'}
  .actions
    = f.submit
