= flash[:notice]
.page-header
  %h1
    %strong Stack Overflow
    %small List of Questions
%table{:class => "table"}
  %tr
    %th Asker
    %th Title
    %th.col-md-6 Question
    %th Points
    %th

  - @questions.each do |question|
    %tr
      %td= question.name
      %td= question.title
      %td= question.question
      %td= question.points

      .btn-group.btn-group-justified
        %td= button_to 'Show', question ,:method => :get, :class => "btn btn-primary"
        - if !session[:user_id].nil?
          %td= button_to 'Edit', edit_question_path(question), :method => :get, :class => "btn btn-warning"
          %td= button_to 'Delete', question_path(question), :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn btn-danger"
%br/

- if !session[:user_id].nil?
  = button_to 'Ask a Question', new_question_path, :method => :get, :class => "btn btn-success center-block"